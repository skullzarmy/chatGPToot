{
    "name": "ChatGPToot",
    "version": "1.0.0",
    "description": "A Mastodon social bot powered by OpenAI.",
    "main": "app.js",
    "scripts": {
        "start": "node app.js",
        "now": "node app.js --run-now",
        "image": "node app.js --post-image",
        "dev": "node app.js --dev",
        "build": "npm install && npm start",
        "mentions": "node mentions.js",
        "mentions-once": "node mentions.js --no-loop",
        "mention-server": "nohup npm run mentions > logs/bot-log.log 2>&1 &"
    },
    "keywords": [
        "mastodon",
        "openai",
        "bot"
    ],
    "author": "Joe Peterson (skullzarmy)",
    "license": "MIT",
    "dependencies": {
        "dotenv": "^16.0.3",
        "mastodon": "^1.2.2",
        "openai": "^3.2.1"
    }
}
